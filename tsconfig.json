{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"skipLibCheck": true,
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",

		"plugins": [{ "name": "next" }],

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@commons/*": ["./src/commons/*"],
			"@modules/*": ["./src/modules/*"],
			"@helpers/*": ["./src/helpers/*"],
			"@configs/*": ["./src/configs/*"],
			"@utils/*": ["./src/utils/*"],
			"@apis/*": ["./src/apis/*"],
			"@assets/*": ["./src/assets/*"],
			"@styles/*": ["./src/styles/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@pages/*": ["./src/pages/*"],
			"@types/*": ["./src/types/*"],
			"@stores/*": ["./src/stores/*"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}

